{% block title %}Games{% endblock %}

{% block body %}
    <h1>Games</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Gameid</th>
                <td>{{ game.gameid }}</td>
            </tr>
            <tr>
                <th>Gametitle</th>
                <td>{{ game.gametitle }}</td>
            </tr>
            <tr>
                <th>Platforms</th>
                <td>{{ game.platforms }}</td>
            </tr>
            <tr>
                <th>Gamedesc</th>
                <td>{{ game.gamedesc }}</td>
            </tr>
            <tr>
                <th>Releasedate</th>
